<% if @admin.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= f.label :name, "名前", class: "form-label" %>
<%= f.text_field :name, class: "form-input form-control" %>
<%= f.label :email, "メールアドレス", class: "form-label" %>
<%= f.email_field :email, class: "form-input form-control" %>
<%= f.label :line_id, "LINE ID", class: "form-label" %>
<%= f.text_field :line_id, class: "form-input form-control" %>
<%= f.label :password, "パスワード", class: "form-label" %>
<%= f.password_field :password, class: "form-input form-control" %>
<%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
<%= f.password_field :password_confirmation, class: "form-input form-control" %>
<%= f.submit "新規作成", class: "btn btn-primary form-input" %>